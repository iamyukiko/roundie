<div class="container">
  <div class="mx-auto" style="width: 500px;">
    <h4 class="mt-2 mb-4 p-2 text-center">管理者ログインページ</h4>
      <%= render "public/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table class="table table-borderless table-sm">
            <tbody>
              <tr>
                <td><%= f.label :email, "メールアドレス" %></td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>
              <tr>
                <td><%= f.label :password, "パスワード" %></td>
                <td><%= f.password_field :password, autocomplete: "current-password" %></td>
              </tr>
                <% if devise_mapping.rememberable? %>
              <tr>
                <td colspan="2" align="center"><%= f.check_box :remember_me %><%= f.label :"次回から自動でログイン" %></td>
              </tr>
                <% end %>
              <tr>
                <td colspan="2" align="center"><%= f.submit "ログイン", class: "btn btn-primary btn-block" %></td>
              </tr>
              <tr>
                <td colspan="2" align="center"><%= link_to "ゲストログイン", admin_guest_sign_in_path, class: "btn btn-warning btn-block", method: :post %></td>
              </tr>
            </tbody>
          </table>
          <% end %>
          <p class="text-center"><font size="2">※管理者ゲストログインはポートフォリオ専用</font></p>
  </div>
</div>