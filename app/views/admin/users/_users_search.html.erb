<div class="page_back">
  <h3 class="p-2"><%= link_to admin_users_path, class: "text-dark" do %><i class="fas fa-arrow-left"></i><% end %></h3>
</div>
<div class="container mt-4">
  <h4><i class="fas fa-search"></i>会員検索結果&emsp; <strong>" <%= @content %> "</strong></h4>
  <table class="table table-bordered table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.user_name, admin_user_path(user.id), class:"text-success" %></td>
          <td><%= user.email %></td>
          <td><% if user.is_valid == true %>
                <p class="text-success font-weight-bold">有効</p>
              <% else %>
                <p class="text-secondary font-weight-bold">退会</p>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>