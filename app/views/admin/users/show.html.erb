<div  style="background-color:#f5f5f5;">
  <h3 class="p-2"><%= link_to admin_users_path, class: "text-dark" do %><i class="fas fa-arrow-left"></i><% end %></h3>
</div>
<div class="container mt-4">
	<div class="row">
		<div class="col">
			<p class="mb-4 text-center"><font size="5">会員詳細</font></p>
			<p class="mt-3 text-center">
				<%= image_tag @user.get_image, class: "rounded-circle mb-3", size:'200x200' %></br>
				ID : <%= @user.id %>&emsp;<strong><%= @user.user_name %></strong></br></br>
				~ 自己紹介 ~ </br>
				<%= @user.self_introduction %></p>
		</div>
		<div class="col mt-5">
			<table class="table table-bordered col-8">
				<tbody>
					<tr>
						<th>ニックネーム : </th>
						<td><%= @user.nickname %></td>
					</tr>
					<tr>
						<th>生年月日 : </th>
						<td><%= @user.birthdate %></td>
					</tr>
					<tr>
						<th>居住地 : </th>
						<td><%= @user.user_area %></td>
					</tr>
					<tr>
						<th>メールアドレス: </th>
						<td><%= @user.email %></td>
					</tr>
					<tr>
						<th>スコアレベル : </th>
						<td><%= @user.user_score_i18n %></td>
					</tr>
					<tr>
						<th>ステータス</th>
						<td>
			      	<% if @user.is_valid == true %>
								<span class="text-success font-weight-bold">有効</span>
							<% else %>
								<span class="text-secondary font-weight-bold">退会</span>
							<% end %>
						</td>
					</tr>
					<tr>
						<td colspan="2" align="center"><%= link_to  "編集する", edit_admin_user_path(@user.id), class: "btn btn-sm btn-success" %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>