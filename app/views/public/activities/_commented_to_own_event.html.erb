<%= link_to read_activities_path(current_user, activity), class: "#{'read' if activity.read?}", method: :patch do %>
  <p>
    <font size ="3">
      <% if  activity.subject.user != current_user %>
        <%= image_tag activity.subject.user.get_image, class: "rounded-circle", size:'100x100' %>
          <%= link_to activity.subject.user.nickname, user_path(activity.subject.user) %>
            が
          <%=link_to 'イベント', event_path(activity.subject.event) %>
            にコメントしました
      <% end %>
    </font>
  </p>
<% end %>