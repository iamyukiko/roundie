<% if  activity.subject.user != current_user %>
  <%= link_to read_activities_path(current_user, activity), class: "dropdown-item border-bottom #{'read' if activity.read?}", method: :patch do %>
    <%= image_tag activity.subject.user.get_image, class: "rounded-circle", size:'100x100' %>
      <%= activity.subject.user.nickname %>がイベントにコメントしました
  <% end %>
<% end %>