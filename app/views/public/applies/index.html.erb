<h3>承認一覧</h3>

<table class="table">
  <thead>
    <tr>
      <td></td>
      <td>イベント名</td>
      <td>申請者</td>
      <td></td>
    </tr>
  </thead>
    <tbody>
       <% @applies.each do |apply| %>
      <tr>
        <td><%= apply.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= apply.event.event_title %></td>
        <td><%= apply.user.user_name %></td>
        <td><%= form_with model: apply, url: update_apply_path(current_user.id, apply.event_id, apply.id), method: :patch, local: true do |f| %>
            <%=f.select :apply_status, options_for_select(Apply.apply_statuses_i18n.invert) %>
            <%= f.submit %>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>