<div class="container">
  <div class="mx-auto" style="width: 500px;">
    <h4 class="mt-2 mb-4 p-2 text-center">新規会員登録</h4>
      <%= render "public/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <table class="table table-borderless table-sm">
            <tr>
              <td><%= f.label :user_name %>
                  <span class="text-danger"><font size ="1">（必須）</font></span>
              </td>
              <td class="form-group"><%= f.text_field :user_name, class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :nickname %>
                  <span class="text-danger"><font size ="1">（必須）</font></span>
                  <font size ="1">※10文字以内</font>
              </td>
              <td class="form-group"><%= f.text_field :nickname, class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :birthdate %>
                <span class="text-danger"><font size ="1">（必須）</font></span>
              </td>
              <td class="form-group"><%= f.date_select :birthdate, start_year:Time.now.year-37, end_year:Time.now.year, date_separator:' / ', class: "form-select" %></td>
            </tr>
            <tr>
              <td><%= f.label :gender %>
                <span class="text-danger"><font size ="1">（必須）</font></span>
              </td>
              <td class="form-group"><%= f.collection_radio_buttons :gender, User.genders_i18n, :first, :last %></td>
            </tr>
            <tr>
              <td><%= f.label :email %>
                <span class="text-danger"><font size ="1">（必須）</font></span>
              </td>
              <td class="form-group"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :password %>
                  <% if @minimum_password_length %>
                    (<em><%= @minimum_password_length %></em>文字以上)<span class="text-danger"><font size ="1">（必須）</font></span>
                  <% end %>
              </td>
              <td class="form-group"><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :password_confirmation %>
                <span class="text-danger"><font size ="1">（必須）</font></span>
              </td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <td colspan="2" align="center"><%= f.submit "登録", class: "btn btn-primary btn-block" %></td>
            </tr>
          </table>
        <% end %>
  </div>
</div>