<div class="container">
  <div class="mx-auto" style="width: 500px;">
    <h4 class="mt-2 mb-4 p-2 text-center">会員ログインページ</h4>
      <%= render "public/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <form class="form-horizontal" >
          <div class="form-group" style="display:flex">
            <%= f.label :email, class:"col-md-4" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
          </div>
          <div class="form-group" style="display:flex">
            <%= f.label :password, class:"col-md-4" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
            <% if devise_mapping.rememberable? %>
          <div class="form-group text-center">
            <%= f.check_box :remember_me %> <%= f.label :次回から自動的にログイン %>
          </div>
            <% end %>
          <div class="form-group">
            <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
            <%= link_to "ゲストログイン", users_guest_sign_in_path, class: "btn btn-warning btn-block", method: :post %>
          </div>
        <% end %>
        <p class="text-center"><font size="2">会員登録がお済みでない方は<%=link_to "こちら", new_user_registration_path %> から新規登録を行なってください。</font></p>
      </form>
  </div>
</div>
