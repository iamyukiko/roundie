<div class="container">
  <h3>プロフィール編集</h3>

  <%= form_with model: @user do |f| %>
  <table class="table">
    <tr>
      <td><%= f.label :user_name, "氏名（スペースなし）" %></td>
      <td><%= f.text_field :user_name %></td>
    </tr>
    <tr>
      <td><%= f.label :nickname %></td>
      <td><%= f.text_field :nickname %></td>
    </tr>
    <tr>
      <td><%= f.label :birthdate %></td>
      <td><%= f.date_select :birthdate, start_year: 1990, end_year:Time.now.year-10, date_separator:' / ' %></td>
    </tr>
    <tr>
      <td><%= f.label :user_area %></td>
      <td><%= f.select :user_area, User.user_areas.keys, {} %></td>
    <tr>
      <td><%= f.label :gender %></td>
      <td><%= f.collection_radio_buttons :gender, User.genders_i18n, :first, :last %></td>
    </tr>
    <tr>
      <td><%= f.label :user_score %></td>
      <td><%= f.collection_select :user_score, User.user_scores_i18n, :first, :last %></td>
    </tr>
    <tr>
      <td><%= f.label :image, "プロフィール画像" %></td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td><%= f.label :self_introduction %></td>
      <td><%= f.text_area :self_introduction %></td>
    </tr>
    <tr>
      <td class="colspan-2"><%= f.submit %></td>
      <td></td>
    </tr>
  </table>
  <% end %>





</div>
