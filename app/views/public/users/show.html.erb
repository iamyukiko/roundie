<div class="container mt-4">
  <% if current_user != @user%>
    <p><p>
  <% else %>
    <h3 class="my_page col-3 text-center">My page</h3>
  <% end %>
    <div class="row mt-3">
      <div class="col-5 mx-auto" style="text-align: center">
        <%= render 'public/users/show', user: @user, isRoom: @isRoom, roomId: @roomId, room: @room, entry: @entry, user: @user%>
      </div>
      <div class="col-7">
        <p><font size="4"><%= link_to "参加イベント一覧", user_path(@user.id,{ type: 'join' }), class: "text-success" %></font> |
            <font size="4"><%= link_to "主催イベント一覧", user_path(@user.id,{ type: 'owner' }), class: "text-success" %></font>
            <%= link_to new_event_path, class: "text-success" do %><i class="fas fa-plus-square"></i><% end %></p>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>開催日</th>
                <th>イベント名</th>
                <th>開催エリア</th>
                <th>参加状況</th>
                <th>募集締切日</th>
              </tr>
            </thead>
              <tbody>
                <% if @events %>
                  <% @events.each do |event| %>
                    <tr>
                      <td><%= event.event_date %></td>
                      <td><%= link_to event.event_title, event_path(event.id), class: "text-success"  %></td>
                      <td><%= event.event_area %></td>
                      <td><%= event.applies.where(apply_status: :approved).count %>/<%= event.entry_limit %>人</td>
                      <td><% if event.deadline_date < Date.today || event.event_status == false %>
                          <p class="text-danger font-weight-bold"> 募集終了 </p>
                          <% else %>
                          あと<%= event.date %>日
                          <% end %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
                <%= paginate @events %>
          </table>
      </div>
  </div>
</div>
